<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_menu_back"
    tools:context=".presentation.MenuActivity">


    <TextView
        android:id="@+id/textView2"
        style="@style/my_main_text_style"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/im_menu_text"
        android:text="@string/memoria"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_start"
        style="@style/my_tv_style"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="@drawable/im_menu_button"
        android:text="Start"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/tv_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_settings"
        style="@style/my_tv_style"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="@drawable/im_menu_button"
        android:text="Settings"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/tv_records"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_start" />

    <TextView
        android:id="@+id/tv_records"
        style="@style/my_tv_style"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="@drawable/im_menu_button"
        android:text="Records"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/tv_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_settings" />

    <TextView
        android:id="@+id/tv_exit"
        style="@style/my_tv_style"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="@drawable/im_menu_button"
        android:text="Exit"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_records" />

</androidx.constraintlayout.widget.ConstraintLayout>