<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_linear"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_gravity="center"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:background="@drawable/im_game_process_win_dialog"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_dialog_text"
        style="@style/my_tv_style"
        android:layout_width="200dp"
        android:paddingBottom="4dp"
        android:layout_height="60dp"
        android:background="@drawable/im_menu_button"
        android:text="Sound"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Restart" />


    <ImageView
        android:id="@+id/iv_cansel"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/im_game_process_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_ok"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/im_game_process_ok"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cansel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_cansel"
        app:layout_constraintTop_toTopOf="@+id/iv_cansel" />


</androidx.constraintlayout.widget.ConstraintLayout>


