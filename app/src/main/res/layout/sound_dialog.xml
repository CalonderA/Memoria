<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_linear"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:layout_gravity="center"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:background="@drawable/im_game_process_win_dialog"
    android:orientation="vertical">


    <TextView
        style="@style/my_tv_style"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/im_menu_button"
        android:paddingBottom="4dp"
        android:text="Sound"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55">

        <RadioButton
            android:id="@+id/rb_sound_on"
            style="@style/my_tv_style"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:paddingEnd="6dp"
            android:text="Sound_on"
            app:buttonTint="@color/green_80" />

        <RadioButton
            android:id="@+id/rb_sound_off"
            style="@style/my_tv_style"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:paddingEnd="6dp"
            android:text="Sound_off"
            app:buttonTint="@color/green_80" />
    </RadioGroup>

    <ImageView
        android:id="@+id/iv_save"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/im_game_process_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>