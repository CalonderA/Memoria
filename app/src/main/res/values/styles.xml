<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="my_main_text_style">
        <item name="android:fontFamily">@font/chekhar</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/green_80</item>
        <item name="android:textSize">56sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:shadowColor">@color/black_95</item>
        <item name="android:shadowDx">16</item>
        <item name="android:shadowRadius">5</item>

    </style>

    <style name="my_tv_style" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/chekhar</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:shadowColor">@color/black_95</item>
        <item name="android:shadowDx">16</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="my_tv_style.green">
        <item name="android:textColor">@color/green_80</item>
    </style>

    <style name="my_tv_style.small">
        <item name="android:textColor">@color/green_80</item>
        <item name="android:textSize">24sp</item>
    </style>


</resources>